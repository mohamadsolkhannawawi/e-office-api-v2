# --- 1. DATABASE CONFIGURATION ---
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# --- 2. SERVER CONFIGURATION ---
PORT=3005
NODE_ENV=development

# --- 3. URL CONFIGURATION ---
BASE_URL="http://localhost:3005"
BETTER_AUTH_URL="http://localhost:3005"
BETTER_AUTH_TRUST_HOST=true
API_URL="http://localhost:3005/api"
PUBLIC_DOMAIN=localhost:3005

# Frontend URL (CORS)
FE_URL="http://localhost:3000"
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# --- 4. EMAIL CONFIGURATION ---
# Set to false to disable email verification in development
ENABLE_EMAIL_VERIFICATION=false

# SMTP Configuration (uncomment for production)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# --- 5. MINIO/S3 CONFIGURATION ---
# For local development with MinIO
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_REGION="us-east-1"
MINIO_BUCKET_NAME="e-office-srb"

# --- 6. SSO UNDIP CONFIGURATION ---
# Set to true to enable SSO UNDIP integration
ENABLE_SSO_UNDIP=true
SSO_CLIENT_ID="your_sso_client_id"
SSO_CLIENT_SECRET="your_sso_client_secret"
SSO_CALLBACK_URL="http://localhost:3005/api/auth/callback/undip"

# --- 7. SECRETS ---
# Generate with: openssl rand -base64 32
JWT_SECRET="your_jwt_secret_here"
BETTER_AUTH_SECRET="your_better_auth_secret_here"

# --- 8. LOCK STORE ---
# Options: memory, postgres, redis
LOCK_STORE=memory
